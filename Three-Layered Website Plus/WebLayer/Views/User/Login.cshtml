@using$safeprojectname$.Properties;
@model $safeprojectname$.Models.User.Login
<h2>@Resource.Login_Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationMessage("Validation")
    <br />
    @Html.LabelFor(x => x.Username)
    <br />
    @Html.ValidationMessageFor(x => x.Username) <br />
    @Html.TextBoxFor(x => x.Username)
    <br />
    <br />
    @Html.LabelFor(x => x.Password)
    <br />
    @Html.ValidationMessageFor(x => x.Password) <br />
    @Html.PasswordFor(x => x.Password)
    <br />
    <br />
    @Html.LabelFor(x => x.KeepLoggedIn)
    <br />
    @Html.CheckBoxFor(x => x.KeepLoggedIn)
    <br />
    <br />
    <br />
    <input type="submit" value="@Resource.Login_LoginButton" />
}